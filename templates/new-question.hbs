<h1>New Question</h1>

<form>
  <div class="form-group">
    <label for="author">Author</label>
    {{input id="author" class="form-control" value=author}}
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    {{textarea id="description" class="form-control" rows="2" value=description}}
  </div>
  <div class="form-group">
    <label for="body">Question</label>
    {{textarea id="body" class="form-control" rows="10" value=body}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>

</form>
